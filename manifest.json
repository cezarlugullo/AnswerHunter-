{
    "manifest_version": 3,
    "name": "AnswerHunter",
    "version": "1.2.0",
    "description": "Caçador de respostas - Encontra respostas para questões educacionais com IA",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://api.groq.com/*",
        "https://google.serper.dev/*",
        "https://*.brainly.com.br/*",
        "https://*.passeidireto.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ]
}